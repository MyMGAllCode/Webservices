<!-- Use this file to deploy some handlers/chains and services      -->
<!-- Two ways to do this:                                           -->
<!--   java org.apache.axis.client.AdminClient deploy.wsdd          -->
<!--      after the axis server is running                          -->
<!-- or                                                             -->
<!--   java org.apache.axis.utils.Admin client|server deploy.wsdd   -->
<!--      from the same directory that the Axis engine runs         -->

<deployment
    xmlns="http://xml.apache.org/axis/wsdd/"
    xmlns:java="http://xml.apache.org/axis/wsdd/providers/java">

  <!-- Services from BookServiceImplService WSDL service -->

  <service name="BookServiceImpl" provider="java:RPC" style="wrapped" use="literal">
      <parameter name="wsdlTargetNamespace" value="http://sevices.bookService.com"/>
      <parameter name="wsdlServiceElement" value="BookServiceImplService"/>
      <parameter name="schemaQualified" value="http://sevices.bookService.com,http://domain.bookService.com"/>
      <parameter name="wsdlServicePort" value="BookServiceImpl"/>
      <parameter name="className" value="com.bookService.sevices.BookServiceImplSoapBindingImpl"/>
      <parameter name="wsdlPortType" value="BookServiceImpl"/>
      <parameter name="typeMappingVersion" value="1.2"/>
      <operation name="searchBook" qname="operNS:searchBook" xmlns:operNS="http://sevices.bookService.com" returnQName="retNS:searchBookReturn" xmlns:retNS="http://sevices.bookService.com" returnType="rtns:Book" xmlns:rtns="http://domain.bookService.com" soapAction="" >
        <parameter qname="pns:isbn" xmlns:pns="http://sevices.bookService.com" type="tns:int" xmlns:tns="http://www.w3.org/2001/XMLSchema"/>
      </operation>
      <parameter name="allowedMethods" value="searchBook"/>

      <typeMapping
        xmlns:ns="http://domain.bookService.com"
        qname="ns:Book"
        type="java:com.bookService.domain.Book"
        serializer="org.apache.axis.encoding.ser.BeanSerializerFactory"
        deserializer="org.apache.axis.encoding.ser.BeanDeserializerFactory"
        encodingStyle=""
      />
  </service>
</deployment>
